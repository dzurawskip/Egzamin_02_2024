<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#8C93A1"
    android:backgroundTint="#8C93A1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/naglowek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalkulator"
            android:textColor="#000000"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/wyswietlacz"
            android:layout_width="411dp"
            android:layout_height="46dp"
            android:background="#1A5227"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dzialanie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="right"
                android:textColor="#CAC3E3"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dzialania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dodawanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#424957"
                android:text="+"
                app:cornerRadius="50sp" />

            <Button
                android:id="@+id/odejmowanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#424957"
                android:text="-"
                app:cornerRadius="50sp" />

            <Button
                android:id="@+id/mnozenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#424957"
                android:text="*"
                app:cornerRadius="50sp" />

            <Button
                android:id="@+id/dzielenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#424957"
                android:text="/"
                app:cornerRadius="50sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/klawiatura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/liczba1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="1"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="2"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="3"
                    app:cornerRadius="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/liczba4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="4"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="5"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="6"
                    app:cornerRadius="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/liczba7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="7"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="8"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/liczba9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="9"
                    app:cornerRadius="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/liczba0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="0"
                    app:cornerRadius="50dp" />

                <Button
                    android:id="@+id/wynik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#424957"
                    android:text="="
                    app:cornerRadius="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#424957"
                    android:text="RESET"
                    app:cornerRadius="50dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>